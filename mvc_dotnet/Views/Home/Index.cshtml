@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To The Ticket Service App</h1>
    <h7>At this point before user could click on the buttons he would be redirected to login page</h7>
    <p class="text-info">Explore other pages:</p>
    <p class="text-info">These buttons redirect you to the home pages depending your role!</p>

    <ul class="list-group">
        <li class="list-group-item">
            <a asp-controller="Customers" asp-action="Home" class="btn btn-success">Customers</a>
        </li>
        <li class="list-group-item">
            <a asp-controller="ContentAdmins" asp-action="Home" class="btn btn-warning">Content Admins</a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Admins" asp-action="Home" class="btn btn-danger">Admins</a>
        </li>
    </ul>
    @Html.Hidden("RedirectTo", Url.Action("Login", "Users"))

</div>
