@model mvc_dotnet.Models.Reservation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4><i>@Html.DisplayFor(model => model.Customers.Name):</i> Reservation <strong>#@Html.DisplayFor(model => model.Id)</strong></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfSeats)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfSeats)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customers)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customers.Name)
        </dd>
        <hr />
        <h6>Important information about the <i>screening</i>!</h6>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Provoles.MoviesName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Provoles.MoviesName)
        </dd>   
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Provoles.Cinemas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Provoles.Cinemas.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit Reservation</a> |
    <a asp-controller="Customers" asp-action="Home">Go to Home Page</a>
</div>
