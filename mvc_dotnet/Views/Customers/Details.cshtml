@model mvc_dotnet.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserUsernameNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserUsernameNavigation.Username)
        </dd>
    </dl>
</div>
<h1>Your Reservations</h1>
<table class="table">
    <tr>
        <th>
            Number of Seats
        </th>
        <th>
            Cinemas
        </th>
        <th>
            Movies Name
        </th>
    </tr>

    @foreach (var item in Model.Reservations)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provoles.Cinemas.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provoles.MoviesName)
            </td>
        </tr>
    }
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
